<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="40dp" >

    <Button
        android:id="@+id/home_btn_podcast"
        style="@style/DashboardButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:drawableTop="@drawable/home_btn_podcast"
        android:text="@string/menu_item_podcast" />

    <Button
        android:id="@+id/home_btn_calendar"
        style="@style/DashboardButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:drawableTop="@drawable/ic_calendar"
        android:text="@string/menu_item_calendar" />

    <Button
        android:id="@+id/home_btn_aboutus"
        style="@style/DashboardButton"
        android:layout_alignBaseline="@+id/home_btn_share"
        android:layout_alignBottom="@+id/home_btn_share"
        android:layout_alignLeft="@+id/home_btn_podcast"
        android:drawableTop="@drawable/ic_information"
        android:text="@string/menu_item_aboutus" />

    <Button
        android:id="@+id/home_btn_share"
        style="@style/DashboardButton"
        android:layout_alignLeft="@+id/home_btn_calendar"
        android:layout_below="@+id/home_btn_calendar"
        android:layout_marginTop="56dp"
        android:drawableTop="@drawable/ic_share"
        android:text="@string/menu_item_share" />

</RelativeLayout>